<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
    <label>位置情報</label><%= f.text_field :locate %>
    <label>Twitterにも投稿する <%= radio_button :twitter, 'flag', 'yes', {:checked => true} %> しない <%= radio_button :twitter, 'flag', 'no', {} %></label>
    <label>画像投稿</label> <%= f.file_field :image %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
